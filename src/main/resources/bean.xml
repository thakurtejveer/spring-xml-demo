<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="movie" class="com.stackroute.domain.Movie" scope="prototype">
    <constructor-arg name="actor" >
        <bean class="com.stackroute.domain.Actor">
            <constructor-arg name="age" value="26"/>
            <constructor-arg name="name" value="typhoon"/>
            <constructor-arg name="gender" value="neutral"/>
        </bean>
    </constructor-arg>
    </bean>

</beans>